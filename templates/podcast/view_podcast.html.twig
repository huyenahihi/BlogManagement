{% extends "base.html.twig" %}
{% block body %}
	<div class="right">
		<div class="right__content">
			<div class="right__title">Dashboard</div>
			<div class="right__search">
				<p class="right__desc">View podcasts</p>
				<div class="right__inputSearch">
					<input type="text" placeholder="Search here...">
					<i class="las la-search"></i>
				</div>
			</div>
			<div class="right__table">
				<div class="right__tableWrapper">
					<table>
						<thead>
							<tr>
								<th>STT</th>
								<th>Title</th>
								<th>Image</th>
								<th>Audio</th>
								<th>Category</th>
								<th>Content</th>
								<th colspan="2">Actions</th>
							</tr>
						</thead>

						<tbody class="tag">
							{% for podcast in podcasts %}
								<tr class="tag">
									<th>{{podcast.id}}</th>
									<th>{{podcast.title}}</th>
									<th><img class="app_logo" src="{{podcast.image}}" alt="" width="90" height="90"></th>
									<th>
										<audio controls>
											<source src="{{ asset('/AUDIO/'~podcast.audio) }}" type="audio/mpeg">
											trình duyệt của bạn không hỗ trợ thẻ audio
										</audio>
									</th>
									<th>{{podcast.category.title}}</th>
									</th>
									<th>{{podcast.content}}</th>
									<th><img class=" ___icon" src="assets/pen-to-square-solid.svg" alt=""></th>
									<th>
										<a href="{{ path ('podcast_delete', {'id': podcast.id})}}"><img class="___icon" src="assets/trash-can-solid.svg" alt=""></a>
									</th>
								</tr>
								{% endfor %}
							</tbody>
						
					</div>
					<a class="right__tableMore">
						<p>View all</p>
						<img src="assets/arrow-right-black.svg" alt="">
					</a>
				</div>
			</div>
		</div>
	{% endblock %}
